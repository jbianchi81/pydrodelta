{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "pqprocedurefunction.json",
    "title": "PQProcedureFunction",
    "type": "object",
    "description": "Generic class for precipitation - discharge procedure function. Default order of boundaries is: precipitation, potential evapotranspiration, dicharge, soil moisture. Properties for parameters and initial conditions are not set here thus should be set in derived classes",
    "allOf": [
        {
            "$ref": "procedurefunction.json"
        }
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "PQ",
                "PQProcedureFunction",
                "GRP",
                "GRPProcedureFunction",
                "SacramentoSimplified"
            ]
        },
        "init_states": {
            "type": "object",
            "description": "Initial states"
        },
        "parameters": {
            "type": "object",
            "description": "Model parameters"
        },
        "boundaries": {
          "description": "object for mapping boundary conditions with node variable tuples. keys must be boundary condition names and values should be NodeVariableIdTuples.",
          "type": "object",
          "properties": {
            "pma": {
                "description": "mean areal precipitation",
                "$ref": "procedurefunction.json#/$defs/NodeVariableIdTuple"
            },
            "etp": {
                "description": "mean areal potential evapotranspiration",
                "$ref": "procedurefunction.json#/$defs/NodeVariableIdTuple"
            },
            "q_obs": {
                "description": "observed discharge (optional)",
                "$ref": "procedurefunction.json#/$defs/NodeVariableIdTuple"
            },
            "smc_obs": {
                "description": "observed soil moisture (optional)",
                "$ref": "procedurefunction.json#/$defs/NodeVariableIdTuple"
            }
          },
          "required": ["pma", "etp"]
        },
        "outputs": {
            "description": "object for mapping procedure outputs with node variable tuples. Keys must be output names and values must be NodeVariableIdTuples",
            "type": "object",
            "properties": {
                "q_sim": {
                    "description": "simulated discharge",
                    "$ref": "procedurefunction.json#/$defs/NodeVariableIdTuple"
                },
                "smc_sim": {
                    "description": "simulated soil moisture",
                    "$ref": "procedurefunction.json#/$defs/NodeVariableIdTuple"
                }
            }
        }
    },
    "required": [
        "type",
        "parameters"
    ]
}