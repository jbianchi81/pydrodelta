{
    "$id": "plan.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Plan",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "id": {
        "type": "integer"
      },
      "topology": {
        "description": "Either topology object or topology file path",
        "oneOf": [
          {
            "$ref": "topology.json"
          },
          {
            "type": "string"
          }
        ]
      },
      "procedures": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "$ref": "procedure.json"
            },
            {
              "type": "string"
            }
          ]
        }
      },
      "forecast_date": {
        "$ref": "dateorinterval.json"
      },
      "time_interval": {
        "$ref": "timeinterval.json"
      },
      "output_stats": {
        "type": "string",
        "description": "statistics output file"
      },
      "output_analysis": {
        "type": "string",
        "description": "analysis output file"
      }
    },
    "required": [
      "id",
      "name",
      "topology",
      "procedures"
    ],
    "additionalProperties": false
}