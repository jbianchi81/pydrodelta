{
    "$id": "plan.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Plan",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "id": {
        "type": "integer"
      },
      "topology": {
        "description": "Either topology object or topology file path",
        "oneOf": [
          {
            "$ref": "topology.json"
          },
          {
            "type": "string"
          }
        ]
      },
      "procedures": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "$ref": "#/$defs/Procedure"
            },
            {
              "type": "string"
            }
          ]
        }
      },
      "forecast_date": {
        "$ref": "dateorinterval.json"
      },
      "time_interval": {
        "$ref": "timeinterval.json"
      }
    },
    "required": [
      "id",
      "name",
      "topology",
      "procedures"
    ],
    "additionalProperties": false,
    "$defs": {
      "Procedure": {
        "type": "object",
        "properties": {
          "id": {
            "oneOf": [
              {
                "type": "integer"
              },
              {
                "type": "string"
              }
            ]
          },
          "boundaries": {
            "description": "Either array of NodeVariables objects or tuple with node id and variable id",
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "$ref": "topology.json#/$defs/NodeVariable"
                },
                {
                  "$ref": "#/$defs/NodeVariableIdTuple"
                }
              ]
            }
          },
          "outputs": {
            "description": "output node variables where to write procedure outcome",
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "$ref": "topology.json#/$defs/NodeVariable"
                },
                {
                  "$ref": "#/$defs/NodeVariableIdTuple"
                }
              ]
            }
          },
          "initial_states": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "function": {
            "anyOf": [
              {
                "$ref": "procedurefunction.json"
              },
              {
                "$ref": "hecrasprocedurefunction.json"
              },
              {
                "$ref": "polynomialtransformationprocedurefunction.json"
              }
            ]
          },
          "parameters": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "time_interval": {
            "$ref": "timeinterval.json"
          },
          "time_offset": {
            "$ref": "timeinterval.json"
          }
        },
        "required": [
          "id",
          "boundaries",
          "outputs",
          "function"
        ]
      },
      "NodeVariableIdTuple": {
        "type": "array",
        "minItems": 2,
        "maxItems": 3,
        "items": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "type": "string"
            }
          ]
        }
      },
      "additionalProperties": false
    }
  }