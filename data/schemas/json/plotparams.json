{
  "$id": "plotparams.json",
  "schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PlotParams",
  "type": "object",
  "properties": {
    "figsize": {
      "description": "x y size in cm of the plot",
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "forecast_date_annotation": {
      "type": "string"
    },
    "errorBandLabel": {
      "type": "string"
    },
    "prono_annotation": {
      "type": "string"
    },
    "obs_annotation": {
      "type": "string"
    },
    "x_label": {
      "type": "string"
    },
    "y_label": {
      "type": "string"
    },
    "datum_template_string": {
      "type": "string"
    },
    "title_template_string": {
      "type": "string"
    },
    "obs_label": {
      "type": "string"
    },
    "prono_label": {
      "type": "string"
    },
    "footnote": {
      "type": "string"
    },
    "xlim": {
      "description": "bounds of the x axis (dates or intervals)",
      "type": "array",
      "items": {
        "href": "dateorinterval.json"
      }
    },
    "ylim": {
      "description": "bounds of the y axis",
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "station_name": {
      "type": "string"
    },
    "output_file": {
      "description": "plot output file location",
      "type": "string"
    },
    "ydisplay": {
      "description": "y coordinate of the annotations",
      "type": "number"
    },
    "text_xoffset": {
      "description": "x offset in points from default position of the annotations",
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "xytext": {
      "description": "not used",
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "prono_fmt": {
      "description": "Style for forecast series",
      "type": "string"
    },
    "annotate": {
      "description": "Add observed data/forecast data/forecast date annotations",
      "type": "boolean",
      "default": true
    },
    "table_columns": {
      "description": "Which forecast dataframe columns to show",
      "type": "array",
      "items": {
        "type": "string", 
        "enum": [
          "Fecha",
          "Nivel",
          "Hora",
          "Fechap",
          "Dia"
        ]
      },
      "default": [
        "Fecha",
        "Nivel"
      ]
    },
    "date_form": {
      "description": "Date formatting string for x axis tick labels",
      "type": "string",
      "default": "%H hrs \n %d-%b"
    },
    "xaxis_minor_tick_hours": {
      "description": "Hours of location of minor ticks of x axis",
      "type": "array",
      "items": {
        "type": "integer" 
      },
      "default": [3,9,15,21]
    },
    "errorBand": {
      "description": "Columns to use as error band (lower bound, upper bound). If not set and series_prono.adjust_results is True, 'error_band_01' and 'error_band_99' resulting from the adjustment are used",
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 2,
      "maxItems": 2,
      "uniqueItems": true
    },
    "error_band_fmt": {
      "description": "Style for error band",
      "oneOf": [
        {
          "type": "string"          
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "maxItems": 2
        }
      ],
      "default": "k-"
    },
    "forecast_table": {
      "type": "boolean",
      "description": "Print forecast table",
      "default": true
    },
    "footnote_height": {
      "type": "number",
      "description": "Height of space for footnote in inches",
      "default": 0.2
    }
  }
}