{
    "$id": "geometry.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Geometry",
    "type": "object",
    "properties": {
      "type": {
        "description": "tipo de geometr√≠a",
        "type": "string",
        "enum": [
          "Point",
          "MultiPoint",
          "LineString",
          "MultiLineString",
          "Polygon",
          "MultiPolygon",
          "GeometryCollection"
        ]
      },
      "coordinates": {
        "description": "coordenadas",
        "oneOf": [
          {
            "$ref": "geometry.json#/$defs/Position"
          },
          {
            "$ref": "geometry.json#/$defs/LineString"
          },
          {
            "$ref": "geometry.json#/$defs/Polygon"
          },
          {
            "$ref": "geometry.json#/$defs/MultiPolygon"
          }
        ]
      }
    },
    "required": [
      "type",
      "coordinates"
    ],
    "$defs": {
        "Position": {
            "type": "array",
            "items": {
            "type": "number"
            },
            "minItems": 2,
            "maxItems": 3
        },
        "LineString": {
            "type": "array",
            "items": {
            "$ref": "geometry.json#/$defs/Position"
            },
            "minItems": 2
        },
        "Polygon": {
            "type": "array",
            "items": {
            "$ref": "geometry.json#/$defs/LineString"
            }
        },
        "MultiPolygon": {
            "type": "array",
            "items": {
            "$ref": "geometry.json#/$defs/Polygon"
            }
        }
    }
}