{
    "$id": "timeinterval.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "TimeInterval",
    "anyOf": [
        {
            "type": "number"
        },
        {
            "type": "object",
            "properties": {
                "hours": {
                    "type": "integer"
                },
                "minutes": {
                    "type": "integer"
                },
                "seconds": {
                    "type": "integer"
                },
                "days": {
                    "type": "integer"
                },
                "weeks": {
                    "type": "integer"
                },
                "months": {
                    "type": "integer"
                },
                "years": {
                    "type": "integer"
                }
            },
            "additionalProperties": false
        }
    ],
    "description": "Represents a time duration. If a number, it is read as a decimal number of days. If object, one or more integer properties from hours, minutes, seconds, days, weeks, months or years must be used",
    "examples": [
        {
            "hours": 12
        },
        0.5
    ]
}

  